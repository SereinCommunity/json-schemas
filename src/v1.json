{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://sereincommunity.github.io/PluginInfoJsonSchema/v1.json",
    "title": "Serein的插件信息",
    "type": "object",
    "definitions": {
        "version": {
            "type": "string",
            "pattern": "^\\d{1,5}(\\.\\d{1,7}){0,3}$"
        }
    },
    "required": [
        "name",
        "id",
        "author",
        "version",
        "targetingSereinVersion",
        "tags"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "description": "插件名称。可以包含中英文数字和特殊字符",
            "type": "string"
        },
        "id": {
            "description": "插件的唯一标识符。用于区分插件，仅能由长度为5~25的英文字符、数字和短横线组成，且应以英文字母开头",
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z1-9\\-]{4,25}$"
        },
        "author": {
            "description": "作者",
            "type": "string"
        },
        "version": {
            "description": "版本号",
            "$ref": "#/definitions/version"
        },
        "targetingSereinVersion": {
            "description": "适用的Serein的最低版本号",
            "$ref": "#/definitions/version"
        },
        "targetingServerInfos": {
            "description": "适用的服务器信息",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "version": {
                        "description": "版本号",
                        "type": "string"
                    },
                    "name": {
                        "description": "服务器名称",
                        "type": "string",
                        "default": null
                    },
                    "description": {
                        "description": "服务器描述",
                        "type": "string",
                        "default": null
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name",
                    "version"
                ]
            },
            "minItems": 1
        },
        "isDependency": {
            "description": "是否为依赖插件。若为`true`则此插件不会出现在Serein内置的插件市场中且不会被主动加载",
            "type": "boolean",
            "default": false
        },
        "dependencies": {
            "description": "前置依赖",
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "description": "插件的唯一标识符",
                        "pattern": "^[\\w-]{5,25}$",
                        "type": "string"
                    },
                    "version": {
                        "description": "版本号",
                        "$ref": "#/definitions/version"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "id",
                    "version"
                ]
            }
        },
        "tags": {
            "description": "标签。用于为插件归类，方便用户搜索",
            "type": "array",
            "minItems": 1,
            "items": {
                "enum": [
                    "entertainment",
                    "development",
                    "tool",
                    "information",
                    "management",
                    "api"
                ]
            },
            "uniqueItems": true
        }
    }
}